{
  "name": "tagfortag-backend",
  "description": "TODO: Write tagfortag-backend description",
  "version": "0.1.0",
  "license": "MIT",
  "private": true,
  "author": "Michael Schwobe <mschwobe@gmail.com> (http://michaelschwobe.com)",
  "repository": "github:michaelschwobe/tagfortag-backend",
  "scripts": {
    "lint": "eslint .",
    "test": "jest --watch",
    "watch": "NODE_ENV=development nodemon --inspect -r esm src/index.js",
    "start": "NODE_ENV=production node -r esm src/index.js"
  },
  "dependencies": {
    "dotenv-flow": "^0.1.0",
    "esm": "^3.0.84"
  },
  "devDependencies": {
    "@babel/core": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "eslint": "^5.10.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^3.0.0",
    "jest": "^23.6.0",
    "nodemon": "^1.18.7",
    "prettier": "^1.15.3"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "eslintConfig": {
    "env": {
      "jest": true,
      "node": true
    },
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "plugins": [
      "import",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "trailingComma": "all"
        }
      ]
    },
    "overrides": []
  },
  "eslintIgnore": [
    "/coverage",
    "/build"
  ],
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  }
}
